@model IEnumerable<MvcMovie.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-3">Player Profile</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" role="button">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_Of_Birth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Market_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Current_Club)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_Of_Birth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Market_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Current_Club)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success" role="button">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning" role="button">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger role="button">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
